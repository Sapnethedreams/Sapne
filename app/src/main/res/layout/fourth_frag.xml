<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="16dp"

    android:background="@android:color/holo_red_light">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:layout_marginTop="56dp"
        android:src="@drawable/paint" />


    <TextView
        android:id="@+id/tvFragFourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="197dp"
        android:text="ACTIVITIES"
        android:textColor="@android:color/background_dark"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"

        android:paddingRight="16dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvFragFourth"
        android:layout_marginTop="24dp"
        android:text="We believe that true learning comes from activities of body and mind. So, to inculcate the spirit of learning and curiosity amongst the children, we engage them in activities like drawing, craft work, dancing, gardening, quizzing. We also organize activities related to general awareness and ethics of life." />

</RelativeLayout>